<p id="notice"><%= notice %></p>

<h1>Listing Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Content</th>
      <th>Published on</th>
      <th>Author</th>
      <th>Story</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.number %></td>
        <td><%= chapter.title %></td>
        <td><%= chapter.content %></td>
        <td><%= chapter.published_on %></td>
        <td><%= chapter.author %></td>
        <td><%= chapter.story %></td>
        <td><%= link_to 'Show', manage_chapter_path(chapter) %></td>
        <td><%= link_to 'Edit', edit_manage_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', manage_chapter_path(chapter), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

