<h1>Dashboard</h1>

<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-6 panel" >
  <% @counts.each_key do | key | %>
    <li class="text-center">Total <%= key %><br/> <b><%= @counts[key] %></b></li>
  <% end %>
</ul>

<p class="text-center"><%= link_to "View more Stats", manage_stats_path %></p>



<div class="row">
  <div class="small-12 medium-4 columns">
    <h2>Newest Users</h2>

      <% @newest_users.each do | user | %>
        <%= render partial: 'user_capsule', locals: {user: user} %>
      <% end %>
  </div>

  <div class="small-12 medium-4 columns">
    <h2>Recent Users</h2>
      <% @active_users.each do | user | %>
        <%= render partial: 'user_capsule', locals: {user: user} %>
      <% end %>


  </div>

  <div class="small-12 medium-4 columns">
    <h2>Recent Stories</h2>

      <% @recent_stories.each do | story | %>
            <%= render partial: 'story_capsule', locals: {story: story} %>
      <% end %>


  </div>


</div>

<%= debug $redis %>
