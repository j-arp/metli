<div class="story">

  <div class="row title collapse">
    <div class="small-12 medium-12 columns">
      <h3><%= story.name %></h3>
    </div>
  </div>

  <% if local_assigns.fetch(:tools, false) %>
  <div class="row actions collapse">
    <div class="small-12 columns text-right">
      <ul class="inline-list right">
        <li><%= link_to raw("#{fa_icon('pencil')} Write"), new_manage_story_chapter_path(story) %></li>
        <li><%= link_to raw("#{fa_icon('clone')} View"), manage_story_path(story) %></li>
        <li><%= link_to raw("#{fa_icon('edit 1x')} Edit"), edit_manage_story_path(story) %></li>
        <li><%= link_to raw("#{fa_icon('trash 1x')} Delete"), edit_manage_story_path(story) %></li>
      </ul>
    </div>
  </div>
  <% end %>

<% if local_assigns.fetch(:expanded, false) %>

  <div class="row">
    <div class="small-12 columns">

      <div class="row">
        <div class="small-12 medium-6 columns">
          <h3>Chapters</h3>
            <ul class="no-bullets">
            <% story.chapters.reverse.each do | chapter | %>
              <li><%= link_to "#{chapter.number} #{chapter.title}", manage_story_chapter_path(story, chapter) %></li>
            <% end -%>
            <li><%= link_to "Write a new chapter...", new_manage_story_chapter_path(story) %></li>
            </ul>
        </div>
        <div class="small-12 medium-6 columns">
          <h3>Subscribers</h3>
          <ul class="no-bullets">
            <% story.users.each do | subscriber | %>
              <li><%= image_tag subscriber.image, class: 'profile-image' %> <%= subscriber.full_name %></li>
            <% end -%>
          </ul>
        </div>
      </div>
  <% end %>

    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <p>
        <span class="stat">Active? <%= story.active? ? "Yes" : "No" %></span>
        <span class="stat">Subscribers: <%= link_to story.users.count,  subscribers_manage_story_path(story) %></span>
        <span class="stat">Chapters: <%= link_to story.chapters.count,  manage_story_chapters_path(story) %></span>
      </p>
    </div>

    <div class="small-6 columns">
      <% unless story.taxonomy.blank? %>
        <strong>Taxonomy:</strong>
        <%= story.taxonomy %>
      <% end %>
    </div>

  </div>

</div>


