<p id="notice"><%= notice %></p>

<h1>Listing Stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th>Taxonomy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.active %></td>
        <td><%= story.taxonomy %></td>
        <td><%= link_to 'Show', manage_story_path(story) %></td>
        <td><%= link_to 'Edit', edit_manage_story_path(story) %></td>
        <td><%= link_to 'Destroy', manage_story_path(story), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_manage_story_path %>
