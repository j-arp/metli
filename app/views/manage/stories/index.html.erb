<h2>Your Stories</h2>

<div class="row">
  <div class="small-12 columns">
    <%= render @stories unless @stories.empty? %>

    <% if @stories.empty? %>
      <p><%= link_to 'Create your first story', new_manage_story_path %> and invite people to join!</p>
    <% end %>

  </div>

  <div class="small-12 columns text-right">
    <%= link_to 'New Story', new_manage_story_path, class: 'button success' %>
  </div>

</div>


