<div class="row">
  <div class="small-12 columns">
      <h2>Welcome <%= @user.first_name %>!</h2>
  </div>
</div>


<div class="row">
  <div class="small-12 medium-8 columns">

      <div class="row">
          <div class="small-12 columns">
            <%= render 'profile' %>
          </div>
        </div>

      <div class="row">
        <div class="small-12 columns">
          <h3>Your Stories</h3>
          <%= render 'authored_stories' %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 columns text-center expanded">
          <%= link_to raw("#{fa_icon('pencil 3x')}Create a new story"), new_manage_story_path, class: 'button success large radius' %>
        </div>
      </div>

  </div>

  <div class="small-12 medium-4 columns">
    <p>You are current subscribed to <%= @subscriptions.count %> stories</p>
    <p><%= link_to 'Manage Subscriptions', account_subscriptions_path, class: 'button tiny secondary' %></p>

    <p>There are currently  <%= @available_stories.count %> other stories available to subscribe to.</p>
    <p><%= link_to 'Find New Stories', account_available_stories_path, class: 'button tiny secondary' %></p>
  </div>

</div>
