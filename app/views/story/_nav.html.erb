


<div class="row collapse">
  <div class="small-12 medium-12 columns">
    <h2><%= local_assigns.fetch(:title, "") %></<h2>
  </div>

  <div class="small-12 medium-7 columns">
    <%= simple_format(@current_story.teaser) if @current_story %>
  </div>

  <div class="small-12 medium-5 columns text-right">
    <ul class="button-group">
      <li><%= link_to( raw(" #{fa_icon('angle-double-left')} Previous"), read_chapter_path(@steps[:prev]), class: 'button tiny secondary success ') if local_assigns.fetch(:links, []).include?('previous') && @steps[:prev] %></li>
      <li><%= link_to( raw("Next #{fa_icon('angle-double-right')}"), read_chapter_path(@steps[:next]), class: 'button tiny secondary success ') if local_assigns.fetch(:links, []).include?('next')  && @steps[:next] %></li>
      <li><%= link_to( raw("#{fa_icon('question-circle')} About"), about_story_path, class: 'button tiny secondary ') if local_assigns.fetch(:links, []).include?('about') %></li>
      <li><%= link_to( raw(" #{fa_icon('leanpub')} Full"), read_full_story_path(@current_story.permalink), class: 'button tiny secondary ') if local_assigns.fetch(:links, []).include?('link') %></li>
      <li><%= link_to( raw("#{fa_icon('mail-reply')} Back"), story_path, class: 'button tiny secondary ') if local_assigns.fetch(:links, []).include?('back') %></li>
      <li><%= link_to( raw(" #{fa_icon('navicon')} All Stories"), choose_story_path, class: 'button tiny secondary ') if local_assigns.fetch(:links, []).include?('switch') %></li>

    </ul>
  </div>


</div>
