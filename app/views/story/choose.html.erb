<%= render partial: 'nav',  locals: {title: "Stories", links: %w(back)} %>

<p>You have joined the following stories</p>


<% @subscribed_stories.each do | story | %>
  <%= form_tag :set_current_story do %>
  <%= hidden_field_tag :id, story.id %>
  <div class="row bottom-seperator">
    <div class="small-12 medium-12 columns">
      <h3><%= story.name %></h3>
    </div>

    <div class="small-8 medium-10 columns">
      <p><%=raw truncate_html(story.about, {length: 200}) %></p>
      <ul class="inline-list">
        <li>Total Chapters: <%= story.chapters.count %></li>
        <li>Latest Chapter: <%= story.chapters.published.last.title unless story.chapters.published.empty? %></li>
      </ul>
    </div>

    <div class="small-3 medium-2 text-right columns">
      <%= submit_tag 'Read This Story', class: 'button tiny radius' %>
    </div>
  </div>
<% end -%>
<% end -%>
